<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!--
    ESP32 cihazı HTTP protokolü kullandığı için clear text trafiğe izin vermemiz gerekiyor.
    Android 9 (API 28) ve üzeri sürümlerde HTTP varsayılan olarak engellenir.
    -->

    <!-- Development ve debug için tüm clear text trafiğe izin ver -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- ESP32 AP Mode IP adresi -->
        <domain includeSubdomains="false">192.168.4.1</domain>

        <!-- Yerel ağ aralıkları -->
        <domain includeSubdomains="true">192.168.1.0</domain>
        <domain includeSubdomains="true">192.168.0.0</domain>
        <domain includeSubdomains="true">10.0.0.0</domain>
        <domain includeSubdomains="true">172.16.0.0</domain>

        <!-- ESP32 mDNS adı -->
        <domain includeSubdomains="false">kulucka.local</domain>

        <!-- Localhost -->
        <domain includeSubdomains="false">localhost</domain>
        <domain includeSubdomains="false">127.0.0.1</domain>
    </domain-config>

    <!-- Production için daha güvenli konfigürasyon -->
    <domain-config cleartextTrafficPermitted="false">
        <!-- Diğer tüm domainler için HTTPS zorunlu -->
        <domain includeSubdomains="true">.</domain>
    </domain-config>

    <!-- Base config - varsayılan olarak clear text trafiğe izin verme -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Sistem sertifikalarına güven -->
            <certificates src="system"/>
            <!-- Kullanıcı tarafından eklenen sertifikalara güven -->
            <certificates src="user"/>
        </trust-anchors>
    </base-config>

    <!-- Debug build'ler için özel konfigürasyon -->
    <debug-overrides>
        <trust-anchors>
            <!-- Debug için ek sertifika kaynaklarına güven -->
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </debug-overrides>

</network-security-config>