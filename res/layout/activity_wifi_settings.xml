<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    tools:context=".activities.WiFiSettingsActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="@dimen/elevation_app_bar"
        app:title="@string/wifi_settings_title"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="?attr/homeAsUpIndicator" />

    <!-- Connection Status Card -->
    <androidx.cardview.widget.CardView
        style="@style/CardView.App"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/card_content_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@drawable/ic_wifi"
                    android:tint="@color/color_primary"
                    android:layout_marginEnd="@dimen/icon_margin"
                    android:contentDescription="@string/wifi_icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/connection_status"
                    android:textAppearance="@style/TextAppearance.CardTitle"
                    android:textColor="@color/text_primary" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="@dimen/divider_margin"
                android:background="@color/divider_color" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvConnectionStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bağlantı kontrol ediliyor..."
                android:textAppearance="@style/TextAppearance.Status"
                android:textColor="@color/text_secondary"
                android:textStyle="bold"
                tools:text="ESP32 AP Modunda" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvCurrentNetwork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin"
                android:text="Ağ: --"
                android:textAppearance="@style/TextAppearance.Secondary"
                android:textColor="@color/text_secondary"
                tools:text="Ağ: KULUCKA_MK" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvIPAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin"
                android:text="IP: --"
                android:textAppearance="@style/TextAppearance.Secondary"
                android:textColor="@color/text_secondary"
                tools:text="IP: 192.168.4.1" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Control Buttons -->
    <androidx.cardview.widget.CardView
        style="@style/CardView.App"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/card_margin"
        android:layout_marginBottom="@dimen/card_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/card_content_padding">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSwitchToAP"
                style="@style/Button.Outlined"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/small_margin"
                android:text="AP Moduna Geç"
                android:textSize="@dimen/small_text_size"
                app:icon="@drawable/ic_wifi"
                app:iconSize="@dimen/icon_size_small" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSwitchToStation"
                style="@style/Button.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/small_margin"
                android:text="Station Modu"
                android:textSize="@dimen/small_text_size"
                app:icon="@drawable/ic_wifi"
                app:iconSize="@dimen/icon_size_small" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Available Networks Card -->
    <androidx.cardview.widget.CardView
        style="@style/CardView.App"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="@dimen/card_margin"
        android:layout_marginBottom="@dimen/card_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/card_content_padding"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@drawable/ic_refresh"
                    android:tint="@color/color_accent"
                    android:layout_marginEnd="@dimen/icon_margin"
                    android:contentDescription="@string/scan_networks" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/available_networks"
                    android:textAppearance="@style/TextAppearance.CardTitle"
                    android:textColor="@color/text_primary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnScanNetworks"
                    style="@style/Button.Outlined"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="@string/scan_networks"
                    android:textSize="@dimen/small_text_size"
                    android:minWidth="0dp"
                    android:paddingHorizontal="@dimen/small_padding"
                    app:icon="@drawable/ic_refresh"
                    app:iconSize="@dimen/icon_size_small" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/card_content_padding"
                android:background="@color/divider_color" />

            <!-- Networks List -->
            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipeRefreshLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewNetworks"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/small_padding"
                    android:clipToPadding="false"
                    tools:listitem="@layout/item_wifi_network" />

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>