<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    tools:context=".activities.SettingsActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="@dimen/elevation_app_bar"
        app:title="@string/settings_title"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="?attr/homeAsUpIndicator" />

    <!-- Settings Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/activity_padding">

            <!-- WiFi Settings Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardWiFiSettings"
                style="@style/CardView.App"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/card_content_padding"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/settings_icon_size"
                        android:layout_height="@dimen/settings_icon_size"
                        android:src="@drawable/ic_wifi"
                        android:tint="@color/color_primary"
                        android:layout_marginEnd="@dimen/settings_icon_margin"
                        android:contentDescription="@string/wifi_icon" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_wifi"
                            android:textAppearance="@style/TextAppearance.CardTitle"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:text="@string/settings_wifi_desc"
                            android:textAppearance="@style/TextAppearance.Secondary"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/icon_size_small"
                        android:layout_height="@dimen/icon_size_small"
                        android:src="@drawable/ic_arrow_forward"
                        android:tint="@color/text_tertiary"
                        android:contentDescription="@string/settings" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Incubation Settings Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardIncubationSettings"
                style="@style/CardView.App"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/card_content_padding"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/settings_icon_size"
                        android:layout_height="@dimen/settings_icon_size"
                        android:src="@drawable/ic_incubation"
                        android:tint="@color/color_success"
                        android:layout_marginEnd="@dimen/settings_icon_margin"
                        android:contentDescription="@string/incubation_icon" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_incubation"
                            android:textAppearance="@style/TextAppearance.CardTitle"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:text="@string/settings_incubation_desc"
                            android:textAppearance="@style/TextAppearance.Secondary"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/icon_size_small"
                        android:layout_height="@dimen/icon_size_small"
                        android:src="@drawable/ic_arrow_forward"
                        android:tint="@color/text_tertiary"
                        android:contentDescription="@string/settings" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Temperature & Humidity Settings Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTempHumidSettings"
                style="@style/CardView.App"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/card_content_padding"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/settings_icon_size"
                        android:layout_height="@dimen/settings_icon_size"
                        android:src="@drawable/ic_temperature"
                        android:tint="@color/color_accent"
                        android:layout_marginEnd="@dimen/settings_icon_margin"
                        android:contentDescription="@string/temperature_icon" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_temp_humid"
                            android:textAppearance="@style/TextAppearance.CardTitle"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:text="@string/settings_temp_humid_desc"
                            android:textAppearance="@style/TextAppearance.Secondary"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/icon_size_small"
                        android:layout_height="@dimen/icon_size_small"
                        android:src="@drawable/ic_arrow_forward"
                        android:tint="@color/text_tertiary"
                        android:contentDescription="@string/settings" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- PID Settings Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardPIDSettings"
                style="@style/CardView.App"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/card_content_padding"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/settings_icon_size"
                        android:layout_height="@dimen/settings_icon_size"
                        android:src="@drawable/ic_settings"
                        android:tint="@color/color_info"
                        android:layout_marginEnd="@dimen/settings_icon_margin"
                        android:contentDescription="@string/settings_icon" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_pid"
                            android:textAppearance="@style/TextAppearance.CardTitle"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:text="@string/settings_pid_desc"
                            android:textAppearance="@style/TextAppearance.Secondary"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/icon_size_small"
                        android:layout_height="@dimen/icon_size_small"
                        android:src="@drawable/ic_arrow_forward"
                        android:tint="@color/text_tertiary"
                        android:contentDescription="@string/settings" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Motor Settings Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMotorSettings"
                style="@style/CardView.App"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/card_content_padding"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/settings_icon_size"
                        android:layout_height="@dimen/settings_icon_size"
                        android:src="@drawable/ic_motor"
                        android:tint="@color/color_primary"
                        android:layout_marginEnd="@dimen/settings_icon_margin"
                        android:contentDescription="@string/motor_icon" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_motor"
                            android:textAppearance="@style/TextAppearance.CardTitle"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:text="@string/settings_motor_desc"
                            android:textAppearance="@style/TextAppearance.Secondary"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/icon_size_small"
                        android:layout_height="@dimen/icon_size_small"
                        android:src="@drawable/ic_arrow_forward"
                        android:tint="@color/text_tertiary"
                        android:contentDescription="@string/settings" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Calibration Settings Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardCalibrationSettings"
                style="@style/CardView.App"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/card_content_padding"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/settings_icon_size"
                        android:layout_height="@dimen/settings_icon_size"
                        android:src="@drawable/ic_settings"
                        android:tint="@color/color_warning"
                        android:layout_marginEnd="@dimen/settings_icon_margin"
                        android:contentDescription="@string/settings_icon" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_calibration"
                            android:textAppearance="@style/TextAppearance.CardTitle"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:text="@string/settings_calibration_desc"
                            android:textAppearance="@style/TextAppearance.Secondary"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/icon_size_small"
                        android:layout_height="@dimen/icon_size_small"
                        android:src="@drawable/ic_arrow_forward"
                        android:tint="@color/text_tertiary"
                        android:contentDescription="@string/settings" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Alarm Settings Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAlarmSettings"
                style="@style/CardView.App"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/card_content_padding"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/settings_icon_size"
                        android:layout_height="@dimen/settings_icon_size"
                        android:src="@drawable/ic_alarm"
                        android:tint="@color/color_error"
                        android:layout_marginEnd="@dimen/settings_icon_margin"
                        android:contentDescription="@string/alarm_icon" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_alarm"
                            android:textAppearance="@style/TextAppearance.CardTitle"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:text="@string/settings_alarm_desc"
                            android:textAppearance="@style/TextAppearance.Secondary"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/icon_size_small"
                        android:layout_height="@dimen/icon_size_small"
                        android:src="@drawable/ic_arrow_forward"
                        android:tint="@color/text_tertiary"
                        android:contentDescription="@string/settings" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>