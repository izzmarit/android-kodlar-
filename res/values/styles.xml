<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base Application Theme -->
    <style name="AppTheme" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <item name="colorSecondary">@color/color_accent</item>
        <item name="colorSecondaryVariant">@color/color_accent</item>
        <item name="colorOnSecondary">@color/text_on_accent</item>
        <item name="colorSurface">@color/background_surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorBackground">@color/background_color</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorError">@color/color_error</item>
        <item name="colorOnError">@android:color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/navigation_bar_color</item>

        <!-- Window properties -->
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:windowContentTransitions">true</item>

        <!-- Text appearance -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>

        <!-- Action bar -->
        <item name="actionBarTheme">@style/AppTheme.ActionBar</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBar.Style</item>
    </style>

    <!-- AppBar Theme -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
    </style>

    <!-- Popup Theme -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.Material3.Light">
        <item name="colorSurface">@color/background_surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
    </style>

    <!-- Action Bar Theme -->
    <style name="AppTheme.ActionBar" parent="ThemeOverlay.Material3.Dark.ActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
    </style>

    <!-- Action Bar Style -->
    <style name="AppTheme.ActionBar.Style" parent="Widget.Material3.ActionBar.Solid">
        <item name="background">@color/color_primary</item>
        <item name="elevation">@dimen/elevation_app_bar</item>
    </style>

    <!-- No Action Bar Theme -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Card Styles -->
    <style name="CardView.App" parent="Widget.Material3.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="contentPadding">@dimen/card_content_padding</item>
        <item name="android:layout_margin">@dimen/card_margin</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <!-- Temperature Card -->
    <style name="CardView.Temperature" parent="CardView.App">
        <item name="strokeColor">@color/temp_normal</item>
        <item name="strokeWidth">@dimen/border_width_thin</item>
    </style>

    <!-- Humidity Card -->
    <style name="CardView.Humidity" parent="CardView.App">
        <item name="strokeColor">@color/humid_normal</item>
        <item name="strokeWidth">@dimen/border_width_thin</item>
    </style>

    <!-- Button Styles -->
    <style name="Button.App" parent="Widget.Material3.Button">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="elevation">@dimen/button_elevation</item>
    </style>

    <!-- Primary Button -->
    <style name="Button.Primary" parent="Button.App">
        <item name="backgroundTint">@color/button_primary</item>
        <item name="android:textColor">@color/text_on_primary</item>
    </style>

    <!-- Accent Button -->
    <style name="Button.Accent" parent="Button.App">
        <item name="backgroundTint">@color/button_accent</item>
        <item name="android:textColor">@color/text_on_accent</item>
    </style>

    <!-- Success Button -->
    <style name="Button.Success" parent="Button.App">
        <item name="backgroundTint">@color/button_success</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Warning Button -->
    <style name="Button.Warning" parent="Button.App">
        <item name="backgroundTint">@color/button_warning</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Danger Button -->
    <style name="Button.Danger" parent="Button.App">
        <item name="backgroundTint">@color/button_danger</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Outlined Button -->
    <style name="Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="strokeColor">@color/color_primary</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <!-- Text Button -->
    <style name="Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.App" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Heading Text -->
    <style name="TextAppearance.Heading" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/heading_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Title Text -->
    <style name="TextAppearance.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Card Title -->
    <style name="TextAppearance.CardTitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/card_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Body Text -->
    <style name="TextAppearance.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <!-- Secondary Text -->
    <style name="TextAppearance.Secondary" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
    </style>

    <!-- Caption Text -->
    <style name="TextAppearance.Caption" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <!-- Main Value Display (Temperature, Humidity) -->
    <style name="TextAppearance.MainValue" parent="TextAppearance.Material3.DisplaySmall">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/main_value_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Status Text -->
    <style name="TextAppearance.Status" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/status_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Error Text -->
    <style name="TextAppearance.Error" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/color_error</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <!-- Success Text -->
    <style name="TextAppearance.Success" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/color_success</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <!-- Warning Text -->
    <style name="TextAppearance.Warning" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/color_warning</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <!-- Input Field Styles -->
    <style name="TextInputLayout.App" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_margin">@dimen/input_margin</item>
        <item name="boxCornerRadiusTopStart">@dimen/input_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/input_corner_radius</item>
        <item name="boxStrokeColor">@color/input_border_focused</item>
        <item name="hintTextColor">@color/input_hint</item>
        <item name="android:textColorHint">@color/input_hint</item>
    </style>

    <!-- EditText Style -->
    <style name="EditText.App" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:layout_height">@dimen/input_height</item>
        <item name="android:padding">@dimen/input_padding</item>
        <item name="android:textColor">@color/input_text</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:background">@color/input_background</item>
    </style>

    <!-- Switch Style -->
    <style name="Switch.App" parent="Widget.Material3.CompoundButton.Switch">
        <item name="android:layout_margin">@dimen/switch_margin</item>
        <item name="thumbTint">@color/color_primary</item>
        <item name="trackTint">@color/color_primary_light</item>
    </style>

    <!-- FAB Style -->
    <style name="FloatingActionButton.App" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="backgroundTint">@color/fab_color</item>
        <item name="tint">@color/text_on_accent</item>
        <item name="elevation">@dimen/fab_elevation</item>
    </style>

    <!-- Toolbar Style -->
    <style name="Toolbar.App" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/toolbar_color</item>
        <item name="android:elevation">@dimen/toolbar_elevation</item>
        <item name="titleTextColor">@color/text_on_primary</item>
        <item name="subtitleTextColor">@color/text_on_primary</item>
        <item name="android:theme">@style/AppTheme.AppBarOverlay</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
    </style>

    <!-- Progress Bar Styles -->
    <style name="ProgressBar.App" parent="Widget.Material3.CircularProgressIndicator">
        <item name="android:layout_width">@dimen/progress_circular_size</item>
        <item name="android:layout_height">@dimen/progress_circular_size</item>
        <item name="indicatorColor">@color/color_primary</item>
        <item name="trackColor">@color/progress_background</item>
    </style>

    <!-- Dialog Styles -->
    <style name="Dialog.App" parent="ThemeOverlay.Material3.Dialog">
        <item name="colorSurface">@color/background_dialog</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <!-- Alert Dialog Style -->
    <style name="AlertDialog.App" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorSurface">@color/background_dialog</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="buttonBarPositiveButtonStyle">@style/Button.Primary</item>
        <item name="buttonBarNegativeButtonStyle">@style/Button.Text</item>
    </style>

    <!-- List Item Styles -->
    <style name="ListItem.App">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:padding">@dimen/list_item_padding</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- Settings Item Style -->
    <style name="ListItem.Settings" parent="ListItem.App">
        <item name="android:layout_height">@dimen/settings_item_height</item>
        <item name="android:padding">@dimen/settings_item_padding</item>
    </style>

    <!-- WiFi Item Style -->
    <style name="ListItem.WiFi" parent="ListItem.App">
        <item name="android:layout_height">@dimen/wifi_item_height</item>
        <item name="android:padding">@dimen/wifi_item_padding</item>
    </style>

    <!-- Divider Style -->
    <style name="Divider.App">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/divider_color</item>
        <item name="android:layout_marginStart">@dimen/divider_margin</item>
        <item name="android:layout_marginEnd">@dimen/divider_margin</item>
    </style>

    <!-- Chip Styles -->
    <style name="Chip.App" parent="Widget.Material3.Chip.Filter">
        <item name="android:layout_height">@dimen/chip_height</item>
        <item name="android:layout_margin">@dimen/chip_margin</item>
        <item name="chipCornerRadius">@dimen/chip_corner_radius</item>
        <item name="chipBackgroundColor">@color/color_primary_light</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Status Chip Styles -->
    <style name="Chip.Status.Active" parent="Chip.App">
        <item name="chipBackgroundColor">@color/color_success_light</item>
        <item name="android:textColor">@color/color_success</item>
    </style>

    <style name="Chip.Status.Inactive" parent="Chip.App">
        <item name="chipBackgroundColor">@color/color_inactive</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Chip.Status.Warning" parent="Chip.App">
        <item name="chipBackgroundColor">@color/color_warning_light</item>
        <item name="android:textColor">@color/color_warning</item>
    </style>

    <style name="Chip.Status.Error" parent="Chip.App">
        <item name="chipBackgroundColor">@color/color_error_light</item>
        <item name="android:textColor">@color/color_error</item>
    </style>

    <!-- Tab Layout Style -->
    <style name="TabLayout.App" parent="Widget.Material3.TabLayout">
        <item name="android:layout_height">@dimen/tab_height</item>
        <item name="tabTextAppearance">@style/TextAppearance.Tab</item>
        <item name="tabSelectedTextColor">@color/tab_text_color</item>
        <item name="tabTextColor">@color/tab_text_color</item>
        <item name="tabIndicatorColor">@color/tab_indicator_color</item>
        <item name="tabIndicatorHeight">@dimen/tab_indicator_height</item>
        <item name="android:background">@color/toolbar_color</item>
    </style>

    <!-- Tab Text Appearance -->
    <style name="TextAppearance.Tab" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textSize">@dimen/tab_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Slider Style -->
    <style name="Slider.App" parent="Widget.Material3.Slider">
        <item name="android:layout_height">@dimen/slider_height</item>
        <item name="thumbColor">@color/color_primary</item>
        <item name="trackColorActive">@color/color_primary</item>
        <item name="trackColorInactive">@color/color_primary_light</item>
    </style>

    <!-- Bottom Sheet Style -->
    <style name="BottomSheetDialog.App" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="colorSurface">@color/background_surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="bottomSheetStyle">@style/BottomSheet.App</item>
    </style>

    <style name="BottomSheet.App" parent="Widget.Material3.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/BottomSheetShapeAppearance</item>
        <item name="behavior_peekHeight">@dimen/bottom_sheet_peek_height</item>
    </style>

    <style name="BottomSheetShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/bottom_sheet_corner_radius</item>
        <item name="cornerSizeTopRight">@dimen/bottom_sheet_corner_radius</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <!-- Snackbar Style -->
    <style name="Snackbar.App" parent="Widget.Material3.Snackbar">
        <item name="android:layout_margin">@dimen/snackbar_margin</item>
        <item name="backgroundTint">@color/text_primary</item>
        <item name="actionTextColor">@color/color_accent</item>
    </style>

    <!-- Badge Style -->
    <style name="Badge.App" parent="Widget.Material3.Badge">
        <item name="badgeTextColor">@color/text_on_accent</item>
        <item name="backgroundColor">@color/color_accent</item>
    </style>

    <!-- Custom Drawable Backgrounds -->
    <style name="Background.Card" parent="">
        <item name="android:background">@drawable/background_card</item>
    </style>

    <style name="Background.Button" parent="">
        <item name="android:background">@drawable/button_style</item>
    </style>

    <style name="Background.Warning" parent="">
        <item name="android:background">@drawable/background_warning</item>
    </style>

    <!-- Animation Styles -->
    <style name="Animation.Card" parent="">
        <item name="android:layoutAnimation">@anim/layout_animation_fall_down</item>
    </style>

    <!-- Material You Dynamic Colors (Android 12+) -->
    <style name="AppTheme.DynamicColors" parent="AppTheme">
        <!-- Will use system dynamic colors on Android 12+ -->
    </style>

</resources>