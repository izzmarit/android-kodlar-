<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/elevation_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/list_item_padding"
        android:gravity="center_vertical">

        <!-- WiFi Signal Icon -->
        <ImageView
            android:id="@+id/ivSignalIcon"
            android:layout_width="@dimen/wifi_signal_icon_size"
            android:layout_height="@dimen/wifi_signal_icon_size"
            android:layout_marginEnd="@dimen/icon_margin"
            android:src="@drawable/ic_signal_4"
            android:tint="@color/signal_excellent"
            android:contentDescription="@string/wifi_icon"
            tools:tint="@color/signal_excellent" />

        <!-- Network Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- SSID -->
            <TextView
                android:id="@+id/tvSSID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Body"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="KULUCKA_MK" />

            <!-- Security and Signal Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_tiny">

                <TextView
                    android:id="@+id/tvSecurity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Caption"
                    android:textColor="@color/color_success"
                    android:textStyle="bold"
                    android:drawablePadding="@dimen/margin_tiny"
                    tools:text="Açık" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/icon_size_small"
                    android:layout_marginHorizontal="@dimen/margin_medium"
                    android:background="@color/divider_color" />

                <TextView
                    android:id="@+id/tvSignalStrength"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.Caption"
                    android:textColor="@color/signal_excellent"
                    tools:text="-45 dBm (Mükemmel)" />

            </LinearLayout>

        </LinearLayout>

        <!-- Security Icon -->
        <ImageView
            android:id="@+id/ivSecurityIcon"
            android:layout_width="@dimen/wifi_security_icon_size"
            android:layout_height="@dimen/wifi_security_icon_size"
            android:layout_marginStart="@dimen/margin_medium"
            android:src="@drawable/ic_lock"
            android:tint="@color/color_warning"
            android:contentDescription="Şifreli ağ"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

</androidx.cardview.widget.CardView>