<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Başlık -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/incubation_settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorText" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorDivider" />

        <!-- Temel Ayarlar Kartı -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Temel Ayarlar"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorText" />

                <!-- Hedef Sıcaklık -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Hedef Sıcaklık:"
                        android:textSize="14sp"
                        android:textColor="@color/colorText" />

                    <EditText
                        android:id="@+id/et_target_temperature"
                        android:layout_width="100dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:hint="37.5"
                        android:inputType="numberDecimal"
                        android:textSize="14sp"
                        android:background="@drawable/background_card"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="°C"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextSecondary" />

                </LinearLayout>

                <!-- Hedef Nem -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Hedef Nem:"
                        android:textSize="14sp"
                        android:textColor="@color/colorText" />

                    <EditText
                        android:id="@+id/et_target_humidity"
                        android:layout_width="100dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:hint="60.0"
                        android:inputType="numberDecimal"
                        android:textSize="14sp"
                        android:background="@drawable/background_card"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="%"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextSecondary" />

                </LinearLayout>

                <!-- Toplam Gün -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Toplam Gün:"
                        android:textSize="14sp"
                        android:textColor="@color/colorText" />

                    <EditText
                        android:id="@+id/et_total_days"
                        android:layout_width="100dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:hint="21"
                        android:inputType="number"
                        android:textSize="14sp"
                        android:background="@drawable/background_card"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="gün"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextSecondary" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Kontrol Ayarları Kartı -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kontrol Ayarları"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorText" />

                <!-- PID Kontrolü -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="PID Kontrolü:"
                        android:textSize="14sp"
                        android:textColor="@color/colorText" />

                    <Switch
                        android:id="@+id/switch_pid_enabled"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- Çevirme Kontrolü -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Çevirme:"
                        android:textSize="14sp"
                        android:textColor="@color/colorText" />

                    <Switch
                        android:id="@+id/switch_turning_enabled"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- Çevirme Aralığı -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Çevirme Aralığı:"
                        android:textSize="14sp"
                        android:textColor="@color/colorText" />

                    <EditText
                        android:id="@+id/et_turning_interval"
                        android:layout_width="100dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:hint="4"
                        android:inputType="number"
                        android:textSize="14sp"
                        android:background="@drawable/background_card"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="saat"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextSecondary" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Ayarları Kaydet -->
        <Button
            android:id="@+id/btn_save_settings"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:text="@string/save_settings"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/background_button"
            android:elevation="2dp" />

        <!-- Program Kontrolleri -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Program Kontrolleri"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorText" />

                <TextView
                    android:id="@+id/tv_current_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Program Durduruldu"
                    android:textSize="14sp"
                    android:textColor="@color/colorTextSecondary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_start_program"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Programı Başlat"
                        android:textSize="14sp"
                        android:background="@color/colorActive"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btn_stop_program"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Programı Durdur"
                        android:textSize="14sp"
                        android:background="@color/colorError"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>