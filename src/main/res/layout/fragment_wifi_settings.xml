<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Başlık -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WiFi Ayarları"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorText" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorDivider" />

        <!-- Bağlantı Durumu -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bağlantı Durumu"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorText" />

                <TextView
                    android:id="@+id/tv_connection_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Durum: Kontrol ediliyor..."
                    android:textSize="14sp"
                    android:textColor="@color/colorTextSecondary" />

                <TextView
                    android:id="@+id/tv_current_wifi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Bağlı Ağ: Bilinmiyor"
                    android:textSize="14sp"
                    android:textColor="@color/colorTextSecondary" />

                <TextView
                    android:id="@+id/tv_device_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Cihaz Modu: Kontrol ediliyor..."
                    android:textSize="14sp"
                    android:textColor="@color/colorTextSecondary" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- ESP32 IP Ayarları -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ESP32 IP Ayarları"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorText" />

                <!-- ESP32 IP Adresi -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ESP32 IP Adresi:"
                        android:textSize="14sp"
                        android:textColor="@color/colorText" />

                    <EditText
                        android:id="@+id/et_esp32_ip"
                        android:layout_width="150dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:hint="192.168.1.100"
                        android:inputType="text"
                        android:textSize="14sp"
                        android:background="@drawable/background_card"
                        android:padding="8dp" />

                </LinearLayout>

                <!-- IP Kontrol Butonları -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_save_ip"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="IP'yi Kaydet"
                        android:textSize="14sp"
                        android:background="@drawable/background_button"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btn_test_connection"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Bağlantıyı Test Et"
                        android:textSize="14sp"
                        android:background="@color/colorAccent"
                        android:textColor="@android:color/white" />

                </LinearLayout>

                <!-- AP Modu Butonu -->
                <Button
                    android:id="@+id/btn_switch_to_ap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="ESP32'yi AP Moduna Geçir"
                    android:textSize="14sp"
                    android:background="@color/colorPrimary"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- WiFi Ağları -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="WiFi Ağları"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorText" />

                <!-- Ağ Tarama Butonu -->
                <Button
                    android:id="@+id/btn_scan_networks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="WiFi Ağlarını Tara"
                    android:textSize="14sp"
                    android:background="@color/colorPrimary"
                    android:textColor="@android:color/white" />

                <!-- Tarama Progress Bar -->
                <ProgressBar
                    android:id="@+id/progress_scan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:indeterminate="true" />

                <!-- WiFi Ağları Listesi -->
                <ListView
                    android:id="@+id/lv_wifi_networks"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/background_card"
                    android:padding="8dp"
                    android:divider="@color/colorDivider"
                    android:dividerHeight="1dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Manuel WiFi Bağlantısı -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Manuel WiFi Bağlantısı"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorText" />

                <!-- SSID -->
                <EditText
                    android:id="@+id/et_wifi_ssid"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:hint="WiFi Ağ Adı (SSID)"
                    android:inputType="text"
                    android:textSize="14sp"
                    android:background="@drawable/background_card"
                    android:padding="8dp" />

                <!-- Şifre -->
                <EditText
                    android:id="@+id/et_wifi_password"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:hint="WiFi Şifresi"
                    android:inputType="textPassword"
                    android:textSize="14sp"
                    android:background="@drawable/background_card"
                    android:padding="8dp" />

                <!-- Bağlan Butonu -->
                <Button
                    android:id="@+id/btn_connect_wifi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="WiFi'ya Bağlan"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@color/colorActive"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- ESP32 WiFi Komutları -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ESP32 WiFi Kontrolleri"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Bu komutlar ESP32'nin WiFi ayarlarını değiştirir"
                    android:textSize="12sp"
                    android:textColor="@color/colorTextSecondary" />

                <!-- Yenileme Butonu -->
                <Button
                    android:id="@+id/btn_refresh_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Durum Bilgilerini Yenile"
                    android:textSize="14sp"
                    android:background="@color/colorAccent"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>