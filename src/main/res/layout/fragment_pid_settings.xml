<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sıcaklık PID Kontrol Ayarları"
            android:textColor="@color/colorText"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorDivider" />

        <!-- PID Durum Kartı -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PID Kontrol Durumu"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorText" />

                <!-- PID Sistem Durumu -->
                <TextView
                    android:id="@+id/tv_pid_system_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="PID Kontrolü: KAPALI"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorError" />

                <!-- Sıcaklık PID Durumu -->
                <TextView
                    android:id="@+id/tv_temp_pid_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Sıcaklık PID: Bilinmiyor"
                    android:textSize="14sp"
                    android:textColor="@color/colorTextSecondary" />

                <!-- Son Ayarlama Zamanı -->
                <TextView
                    android:id="@+id/tv_last_tune_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Son ayarlama: Hiç yapılmamış"
                    android:textSize="12sp"
                    android:textColor="@color/colorTextSecondary" />

                <!-- PID Etkinleştirme -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sıcaklık PID Kontrolünü Etkinleştir"
                        android:textColor="@color/colorText"
                        android:textSize="16sp" />

                    <Switch
                        android:id="@+id/switch_pid_enabled"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- Otomatik Ayarlama -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Otomatik PID Ayarlama"
                        android:textColor="@color/colorText"
                        android:textSize="16sp" />

                    <Switch
                        android:id="@+id/switch_auto_tuning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- PID Performans Kartı -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sıcaklık PID Performansı"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_temp_current"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Güncel: --°C"
                            android:textSize="14sp"
                            android:textColor="@color/colorText" />

                        <TextView
                            android:id="@+id/tv_temp_setpoint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Hedef: --°C"
                            android:textSize="14sp"
                            android:textColor="@color/colorText" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_temp_error"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hata: --°C"
                            android:textSize="14sp"
                            android:textColor="@color/colorText" />

                        <TextView
                            android:id="@+id/tv_temp_output"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Çıkış: --%"
                            android:textSize="14sp"
                            android:textColor="@color/colorText" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Performans Çubuğu -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="PID Performansı:"
                    android:textSize="14sp"
                    android:textColor="@color/colorText" />

                <ProgressBar
                    android:id="@+id/pb_temp_performance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:max="100"
                    android:progress="0" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Kontrol Butonları -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <!-- Veri Yenile Butonu -->
            <Button
                android:id="@+id/btn_load_pid_settings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="ESP32'den Verileri Yükle"
                android:background="@color/colorAccent"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <!-- Varsayılan Değerleri Yükle Butonu -->
            <Button
                android:id="@+id/btn_reset_pid_defaults"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Varsayılan Değerleri Yükle"
                android:background="@drawable/background_button"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Otomatik Ayarlama Butonları -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_start_auto_tune"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Otomatik Ayarlamayı Başlat"
                android:background="@color/colorAccent"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_stop_auto_tune"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Otomatik Ayarlamayı Durdur"
                android:background="@color/colorError"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Test Butonu -->
        <Button
            android:id="@+id/btn_test_pid_response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="PID Tepki Testi Başlat (5 dakika)"
            android:background="@drawable/background_button"
            android:textColor="@android:color/white" />

        <!-- Manuel PID Parametreleri -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Manuel PID Parametreleri"
                    android:textColor="@color/colorText"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Kp Parametresi -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kp - Orantısal Kazanç (0.0 - 10.0)"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_temp_kp"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="4dp"
                        android:hint="2.0"
                        android:inputType="numberDecimal"
                        android:textColor="@color/colorText"
                        android:background="@drawable/background_card"
                        android:padding="8dp" />

                    <SeekBar
                        android:id="@+id/sb_temp_kp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:max="1000" />

                </LinearLayout>

                <!-- Ki Parametresi -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ki - İntegral Kazanç (0.000 - 1.000)"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_temp_ki"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="4dp"
                        android:hint="0.100"
                        android:inputType="numberDecimal"
                        android:textColor="@color/colorText"
                        android:background="@drawable/background_card"
                        android:padding="8dp" />

                    <SeekBar
                        android:id="@+id/sb_temp_ki"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:max="1000" />

                </LinearLayout>

                <!-- Kd Parametresi -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kd - Türev Kazanç (0.0 - 5.0)"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_temp_kd"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="4dp"
                        android:hint="0.5"
                        android:inputType="numberDecimal"
                        android:textColor="@color/colorText"
                        android:background="@drawable/background_card"
                        android:padding="8dp" />

                    <SeekBar
                        android:id="@+id/sb_temp_kd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:max="500" />

                </LinearLayout>

                <!-- PID Ayarları Kaydet -->
                <Button
                    android:id="@+id/btn_save_pid_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Manuel PID Ayarlarını ESP32'ye Kaydet"
                    android:background="@drawable/background_button"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Gelişmiş PID Ayarları -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gelişmiş PID Ayarları"
                    android:textColor="@color/colorText"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Örnekleme Süresi (ms)"
                            android:textColor="@color/colorTextSecondary"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/et_sample_time"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:hint="1000"
                            android:inputType="number"
                            android:textColor="@color/colorText"
                            android:background="@drawable/background_card"
                            android:padding="8dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ters Yön Kontrolü"
                            android:textColor="@color/colorTextSecondary"
                            android:textSize="14sp" />

                        <Switch
                            android:id="@+id/switch_reverse_direction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Min. Çıkış (%)"
                            android:textColor="@color/colorTextSecondary"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/et_output_min"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:hint="0"
                            android:inputType="numberDecimal"
                            android:textColor="@color/colorText"
                            android:background="@drawable/background_card"
                            android:padding="8dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Maks. Çıkış (%)"
                            android:textColor="@color/colorTextSecondary"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/et_output_max"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:hint="100"
                            android:inputType="numberDecimal"
                            android:textColor="@color/colorText"
                            android:background="@drawable/background_card"
                            android:padding="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- PID Bilgi Notu -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PID Parametreleri Hakkında:"
                    android:textColor="@color/colorText"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="• Kp (Orantısal): Hata miktarına göre çıkış gücünü belirler. Yüksek değer hızlı tepki verir ancak salınım yaratabilir."
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="• Ki (İntegral): Kalıcı hataları düzeltir. Sistemin hedef değerde kalmasını sağlar."
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="• Kd (Türev): Hata değişim hızına göre tepki verir. Sistem kararlılığını artırır."
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="⚠️ Bu ayarlar sadece sıcaklık kontrolü içindir. Nem kontrolü PID kullanmamaktadır."
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>