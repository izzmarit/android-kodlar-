<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sıcaklık PID Kontrol Ayarları"
            android:textColor="@color/colorText"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorDivider" />

        <!-- PID Durum Kartı -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PID Kontrol Durumu"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorText" />

                <!-- PID Durum Göstergesi -->
                <TextView
                    android:id="@+id/tv_pid_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="PID Kontrolü: KAPALI"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorError" />

                <!-- Otomatik Ayarlama Durum Göstergesi -->
                <TextView
                    android:id="@+id/tv_auto_tune_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Otomatik Ayarlama: DEVAM EDİYOR"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:visibility="gone" />

                <!-- PID Etkinleştirme -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sıcaklık PID Kontrolünü Etkinleştir"
                        android:textColor="@color/colorText"
                        android:textSize="16sp" />

                    <Switch
                        android:id="@+id/sw_pid_enable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- PID Modu Seçimi -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PID Modu"
                    android:textColor="@color/colorText"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rg_pid_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <RadioButton
                        android:id="@+id/rb_manual_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Manuel Ayar"
                        android:textColor="@color/colorText" />

                    <RadioButton
                        android:id="@+id/rb_auto_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Otomatik Ayarlama"
                        android:textColor="@color/colorText" />

                </RadioGroup>

                <!-- Otomatik Ayarlama Butonu -->
                <Button
                    android:id="@+id/btn_start_auto_tune"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:enabled="false"
                    android:text="Otomatik Ayarlamayı Başlat"
                    android:textColor="@android:color/white"
                    android:background="@color/colorAccent" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Kontrol Butonları -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <!-- Refresh Data butonu -->
            <Button
                android:id="@+id/btn_refresh_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="ESP32'den Güncel Verileri Yükle"
                android:background="@color/colorAccent"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <!-- Varsayılan Değerleri Yükle Butonu -->
            <Button
                android:id="@+id/btn_load_defaults"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="ESP32 Varsayılan Değerleri Yükle"
                android:background="@drawable/background_button"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Manuel PID Parametreleri -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Manuel PID Parametreleri"
                    android:textColor="@color/colorText"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kp - Orantısal (0-10)"
                            android:textColor="@color/colorTextSecondary"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/et_temp_kp"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:hint="2.0"
                            android:inputType="numberDecimal"
                            android:textColor="@color/colorText"
                            android:background="@drawable/background_card"
                            android:padding="8dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ki - İntegral (0-5)"
                            android:textColor="@color/colorTextSecondary"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/et_temp_ki"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:hint="0.5"
                            android:inputType="numberDecimal"
                            android:textColor="@color/colorText"
                            android:background="@drawable/background_card"
                            android:padding="8dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kd - Türev (0-5)"
                            android:textColor="@color/colorTextSecondary"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/et_temp_kd"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:hint="1.0"
                            android:inputType="numberDecimal"
                            android:textColor="@color/colorText"
                            android:background="@drawable/background_card"
                            android:padding="8dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- PID Ayarları Kaydet -->
                <Button
                    android:id="@+id/btn_save_pid_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Manuel PID Ayarlarını Kaydet"
                    android:background="@drawable/background_button"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- PID Modları Açıklaması -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PID Modları:"
                    android:textColor="@color/colorText"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="• Manuel Ayar: Kendi PID parametrelerinizi elle girin"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="• Otomatik Ayarlama: ESP32 optimal PID değerlerini kendisi bulur (5-10 dakika sürer)"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="12sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- PID Bilgi Notu -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PID Parametreleri Hakkında:"
                    android:textColor="@color/colorText"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="• Kp (Orantısal): Hata miktarına göre çıkış gücünü belirler. Yüksek değer hızlı tepki verir ancak salınım yaratabilir."
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="• Ki (İntegral): Kalıcı hataları düzeltir. Sistemin hedef değerde kalmasını sağlar."
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="• Kd (Türev): Hata değişim hızına göre tepki verir. Sistem kararlılığını artırır."
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="12sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>