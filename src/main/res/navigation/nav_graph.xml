<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dashboardFragment">

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.kuluckakontrolu.fragments.DashboardFragment"
        android:label="@string/dashboard"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboardFragment_to_graphFragment"
            app:destination="@id/graphFragment" />
    </fragment>

    <fragment
        android:id="@+id/graphFragment"
        android:name="com.example.kuluckakontrolu.fragments.GraphFragment"
        android:label="@string/graphs"
        tools:layout="@layout/fragment_graph" />

    <fragment
        android:id="@+id/journalFragment"
        android:name="com.example.kuluckakontrolu.fragments.JournalFragment"
        android:label="@string/journal"
        tools:layout="@layout/fragment_journal" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.kuluckakontrolu.fragments.SettingsFragment"
        android:label="@string/settings"
        tools:layout="@layout/fragment_settings" />

</navigation>