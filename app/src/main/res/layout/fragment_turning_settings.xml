<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Başlık -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Çevirme Ayarları"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorText" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorDivider" />

        <!-- Çevirme Kontrolü -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Çevirme Kontrolü"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorText" />

                <!-- Çevirme Etkinleştir -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Çevirmeyi Etkinleştir:"
                        android:textSize="14sp"
                        android:textColor="@color/colorText" />

                    <Switch
                        android:id="@+id/switch_turning_enabled"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- Durum Göstergesi -->
                <TextView
                    android:id="@+id/tv_turning_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Çevirme: Pasif"
                    android:textSize="14sp"
                    android:textColor="@color/colorInactive"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Çevirme Parametreleri -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Çevirme Parametreleri"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorText" />

                <!-- Çevirme Aralığı -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Çevirme Aralığı:"
                        android:textSize="14sp"
                        android:textColor="@color/colorText" />

                    <EditText
                        android:id="@+id/et_turning_interval"
                        android:layout_width="100dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:hint="4"
                        android:inputType="number"
                        android:textSize="14sp"
                        android:background="@drawable/background_card"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="saat"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextSecondary" />

                </LinearLayout>

                <!-- Çevirme Süresi -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Çevirme Süresi:"
                        android:textSize="14sp"
                        android:textColor="@color/colorText" />

                    <EditText
                        android:id="@+id/et_turning_duration"
                        android:layout_width="100dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:hint="30"
                        android:inputType="number"
                        android:textSize="14sp"
                        android:background="@drawable/background_card"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="saniye"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextSecondary" />

                </LinearLayout>

                <!-- Çevirme Açısı -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Çevirme Açısı:"
                        android:textSize="14sp"
                        android:textColor="@color/colorText" />

                    <EditText
                        android:id="@+id/et_turning_angle"
                        android:layout_width="100dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:hint="90"
                        android:inputType="number"
                        android:textSize="14sp"
                        android:background="@drawable/background_card"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="derece"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextSecondary" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Zamanlama Bilgileri -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Zamanlama Bilgileri"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorText" />

                <TextView
                    android:id="@+id/tv_last_turning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Son Çevirme: Henüz yapılmadı"
                    android:textSize="14sp"
                    android:textColor="@color/colorTextSecondary" />

                <TextView
                    android:id="@+id/tv_next_turning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Sonraki Çevirme: Hesaplanıyor..."
                    android:textSize="14sp"
                    android:textColor="@color/colorTextSecondary" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Kontrol Butonları -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_save_turning_settings"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Ayarları Kaydet"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/background_button"
                android:elevation="2dp" />

            <Button
                android:id="@+id/btn_test_turning"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Test Çevirmesi"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                android:elevation="2dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>