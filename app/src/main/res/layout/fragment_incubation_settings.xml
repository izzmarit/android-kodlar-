<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Başlık -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/incubation_settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorText" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorDivider" />

        <!-- Kuluçka Tipi Seçimi Kartı -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/incubation_type_selection"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorText" />

                <RadioGroup
                    android:id="@+id/rg_incubation_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rb_chicken"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/chicken"
                        android:textColor="@color/colorText"
                        android:textSize="14sp"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/rb_quail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/quail"
                        android:textColor="@color/colorText"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/rb_goose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/goose"
                        android:textColor="@color/colorText"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/rb_manual"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/manual"
                        android:textColor="@color/colorText"
                        android:textSize="14sp" />

                </RadioGroup>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Manuel Ayarlar Kartı -->
        <androidx.cardview.widget.CardView
            android:id="@+id/manual_settings_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/manual_settings"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorText" />

                <!-- Gelişim Sıcaklığı -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/development_temp"
                        android:textSize="14sp"
                        android:textColor="@color/colorText" />

                    <EditText
                        android:id="@+id/et_manual_dev_temp"
                        android:layout_width="100dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:hint="37.5"
                        android:inputType="numberDecimal"
                        android:textSize="14sp"
                        android:background="@drawable/background_card"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="°C"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextSecondary" />

                </LinearLayout>

                <!-- Çıkım Sıcaklığı -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/hatching_temp"
                        android:textSize="14sp"
                        android:textColor="@color/colorText" />

                    <EditText
                        android:id="@+id/et_manual_hatch_temp"
                        android:layout_width="100dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:hint="37.0"
                        android:inputType="numberDecimal"
                        android:textSize="14sp"
                        android:background="@drawable/background_card"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="°C"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextSecondary" />

                </LinearLayout>

                <!-- Gelişim Nemi -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/development_humid"
                        android:textSize="14sp"
                        android:textColor="@color/colorText" />

                    <EditText
                        android:id="@+id/et_manual_dev_humid"
                        android:layout_width="100dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:hint="60"
                        android:inputType="number"
                        android:textSize="14sp"
                        android:background="@drawable/background_card"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="%"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextSecondary" />

                </LinearLayout>

                <!-- Çıkım Nemi -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/hatching_humid"
                        android:textSize="14sp"
                        android:textColor="@color/colorText" />

                    <EditText
                        android:id="@+id/et_manual_hatch_humid"
                        android:layout_width="100dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:hint="70"
                        android:inputType="number"
                        android:textSize="14sp"
                        android:background="@drawable/background_card"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="%"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextSecondary" />

                </LinearLayout>

                <!-- Gelişim Günleri -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/development_days"
                        android:textSize="14sp"
                        android:textColor="@color/colorText" />

                    <EditText
                        android:id="@+id/et_manual_dev_days"
                        android:layout_width="100dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:hint="18"
                        android:inputType="number"
                        android:textSize="14sp"
                        android:background="@drawable/background_card"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="gün"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextSecondary" />

                </LinearLayout>

                <!-- Çıkım Günleri -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/hatching_days"
                        android:textSize="14sp"
                        android:textColor="@color/colorText" />

                    <EditText
                        android:id="@+id/et_manual_hatch_days"
                        android:layout_width="100dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:hint="3"
                        android:inputType="number"
                        android:textSize="14sp"
                        android:background="@drawable/background_card"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="gün"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextSecondary" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Durum Bilgileri Kartı -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mevcut Durum"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorText" />

                <!-- Kuluçka Durumu -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Kuluçka Çalışıyor:"
                        android:textSize="14sp"
                        android:textColor="@color/colorText" />

                    <Switch
                        android:id="@+id/switch_incubation_running"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- Durum Metni -->
                <TextView
                    android:id="@+id/tv_current_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Program Durduruldu"
                    android:textSize="14sp"
                    android:textColor="@color/colorTextSecondary" />

                <!-- Gün Bilgisi -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_current_day"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mevcut Gün: 0"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextSecondary" />

                    <TextView
                        android:id="@+id/tv_total_days"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Toplam Gün: 0"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextSecondary" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Ayarları Kaydet -->
        <Button
            android:id="@+id/btn_save_settings"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:text="@string/save_settings"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/background_button"
            android:elevation="2dp" />

        <!-- Program Kontrolleri -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Program Kontrolleri"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_start_program"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="@string/start_incubation"
                        android:textSize="14sp"
                        android:background="@color/colorActive"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btn_stop_program"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="@string/stop_incubation"
                        android:textSize="14sp"
                        android:background="@color/colorError"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>